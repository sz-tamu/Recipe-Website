<%- include("partials/header") %>
<div class="container">
	<h1>
		Edit Recipe
	</h1>

	<form action="/recipes/<%= recipe._id%>?_method=PUT" method="POST">
  <div class="mb-3">
    <label for="title" class="form-label"  >Title</label>
    <input type="text" class="form-control" name="title" value="<%= recipe.title%>" >
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">description</label>
    <input type="text" class="form-control" name="description"  value="<%= recipe.description%>">
  </div>

 <div class="mb-3">
    <label for="author" class="form-label">Author</label>
    <input type="text" class="form-control" name="author"  value="<%= recipe.author%>">
  </div>
	<div class="mb-3">
    <label for="publisher" class="form-label">publisher</label>
    <input type="text" class="form-control" name="publisher"  value="<%= recipe.publisher%>">
  </div>
	<div class="mb-3">
    <label for="date" class="form-label">Date</label>
    <input type="date" class="form-control" name="date"  value="<%= recipe.date.toISOString().split('T')[0]%>">
  </div>
	<div class="mb-3">
    <label for="series" class="form-label">series</label>
    <input type="text" class="form-control" name="series" value="<%= recipe.series%>" >
  </div>
	<div class="mb-3">
    <label for="issue" class="form-label">issue</label>
    <input type="number" class="form-control" name="issue"  value="<%= recipe.issue%>">
  </div>
	<div class="mb-3">
    <label for="genre" class="form-label">genre</label>
    <select class="form-control" id="genre" name="genre">
		<option disabled>Choose Below</option>
		<option <%= recipe.genre === 'superhero' ? 'selected' : '' %> >Superhero</option>
		<option <%= recipe.genre === 'manga' ? 'selected' : '' %> >Manga</option>
		<option<%= recipe.genre === 'slice-of-Life' ? 'selected' : '' %> >Slice-of-Life</option>
		<option<%= recipe.genre === 'humor' ? 'selected' : '' %> >Humor</option>
		<option<%= recipe.genre === 'sci-fi' ? 'selected' : '' %> >Sci-fi</option>
		<option<%= recipe.genre === 'fantasy' ? 'selected' : '' %> >Fantasy</option>
		<option<%= recipe.genre === 'horror' ? 'selected' : '' %> >Horror</option>
		<option<%= recipe.genre === 'action' ? 'selected' : '' %> >Action</option>
		<option<%= recipe.genre === 'nonfiction' ? 'selected' : '' %> >Nonfiction</option>
		</select>
  </div>
	<div class="mb-3 form-check">
    
    <input type="checkbox" class="form-control form-check-input" name="color"  <%= recipe.color ? 'checked' : '' %>>
		<label for="color" class="form-label">Color?</label>
  </div>
	 <div class="mb-3">
    <label for="image" class="form-label">link to Image</label>
    <input type="text" class="form-control" name="image"  value="<%= recipe.image%>">
  </div>

  <button type="submit" class="btn btn-primary">Submit</button>
</form>
	</div>

	  <%- include("partials/footer") %>